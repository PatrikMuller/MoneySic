@model MoneySic.Models.PessoaFisica

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Form Cadastro";

}

<div class="panel panel-default">
    <div class="panel-heading">
        <h2>Cadastro de Pessoa Física</h2>
    </div>
    <div class="panel-body">

        @using (Html.BeginForm("Grava", "PessoaFisica", FormMethod.Post, new { @class = "form-horizontal" }))
        {

            <div class="form-group">
                @Html.LabelFor(p => p.IdPessoa, "Id:", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(p => p.IdPessoa, new { @readonly = "true", @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(p => p.Nome, "Nome:", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(p => p.Nome, new { @class = "form-control", placeholder = "Escreva seu Nome" })
                </div>
                    @Html.ValidationMessage("Nome")
            </div>

            <div class="form-group">
                @Html.LabelFor(p => p.Cpf, "Cpf:", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(p => p.Cpf, new { @class = "form-control" })
                </div>
                @Html.ValidationMessage("Cpf")
            </div>

            <div class="form-group">
                @Html.LabelFor(p => p.Rg, "RG:", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(p => p.Rg, new { @class = "form-control" })
                </div>
                @Html.ValidationMessage("NomePai")
            </div>

            <div class="form-group">
                @Html.LabelFor(p => p.NomePai, "Nome do Pai:", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(p => p.NomePai, new { @class = "form-control" })
                </div>
                @Html.ValidationMessage("NomePai")
            </div>

            <div class="form-group">
                @Html.LabelFor(p => p.NomeMae, "Nome da Mãe:", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(p => p.NomeMae, new { @class = "form-control" })
                </div>
                @Html.ValidationMessage("NomeMae")
            </div>

            <div class="form-group">
                @Html.LabelFor(p => p.Sexo, "Sexo:", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(p => p.Sexo, new { @class = "form-control" })
                </div>
                @Html.ValidationMessage("Sexo")
            </div>

            <div class="form-group">
                @Html.LabelFor(p => p.DataNascimento, "Data de Nascimento:", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(p => p.DataNascimento, new { type = "date", @class = "form-control" })
                </div>
                @Html.ValidationMessage("DataNascimento")
            </div>

            <input type="submit" value="Cadastrar" class="btn btn-primary" />
        }
    </div>
</div>
